<!DOCTYPE html>

<title>Список продуктов</title>

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Список продуктов</h1>
    <a href="{{ path('product_create') }}">Новая запись</a>
    <table>
        <thead>
        <th></th>
        </thead>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td><a href="{{ path('product_price_edit', {'id': product.id}) }}">Изменить цену</a></td>
            </tr>
        {% endfor %}
    </table>

</div>
{% endblock %}
